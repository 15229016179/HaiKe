<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haike.web.dao.MenuDao">

	<!-- ############################## -->
	<!-- ###### 增加 ###### -->
	<!-- ############################## -->

	<insert id="addMenu" parameterType="com.haike.web.entity.Menu">
		INSERT INTO
		menu(id,title,describe,level,pid,createTime,removed)
		VALUE(#{id},#{title},#{describe},#{level},#{pid},#{createTime},#{removed})
	</insert>

	<!-- ############################## -->
	<!-- ###### 删除 ###### -->
	<!-- ############################## -->

	<delete id="deleteMenu" parameterType="String">
		DELETE FROM menu
		WHERE
		id=#{id}
	</delete>

	<!-- ############################## -->
	<!-- ###### id查询 ###### -->
	<!-- ############################## -->

	<select id="queryMenuById" parameterType="String" resultMap="resultListMenu">
		SELECT * FROM menu m
		WHERE m.id=#{id}
		
		select * from TBL_TEST start with id=1 connect by prior id = pid
	</select>

	<select id="queryMenus" resultMap="resultListMenu">
		SELECT * FROM menu m START WITH id=1 connect by prior id = pid
	</select>

	<resultMap type="com.haike.web.entity.Menu" id="resultListMenu">
		<id column="id" property="id" />
		<result column="title" property="title" />
		<result column="level" property="level" />
		<result column="describe" property="describe" />
		<result column="createTime" property="createTime" />
		<result column="removed" property="removed" />
		<association javaType="com.haike.web.entity.Menu" property="menu">
			<id column="id" property="id" />
			<result column="title" property="title" />
			<result column="level" property="level" />
			<result column="describe" property="describe" />
			<result column="createTime" property="createTime" />
			<result column="removed" property="removed" />
		</association>
	</resultMap>

</mapper>  
